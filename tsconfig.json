{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "lib": ["es2019"],
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"]
  }
  